@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sc.Edu.Web.Models
@model AboutViewModel

@if (Model != null && Model.Item != null)
{
    <!-- About Start -->
    <div class="about wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-md-6">
                    <div class="about-img">
                        @Html.Sitecore().Field("Image", Model.Item)
                    </div>
                </div>
                <div class="col-lg-7 col-md-6">
                    <div class="section-header text-left">
                        <p>@Html.Sitecore().Field("Title", Model.Item)</p>
                        <h2>@Html.Sitecore().Field("Sub_Title", Model.Item)</h2>
                    </div>
                    <div class="about-text">
                        @Html.Sitecore().Field("{4465C18C-2FCF-41D4-8285-8B9D2882551C}", Model.Item)
                        <a class="btn" href="">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
}
